<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="10"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textGrid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:text="UNDERSTANDING EMOTIONAL RESPONSES"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textGrid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Video Advertisements "
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    <GridLayout
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <!-- Row 1-->
            <!-- Column 1-->
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/advertisement_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/colgate"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/advertisement_2"
                android:src="@drawable/doritos"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:clickable="true"/>

        </LinearLayout>

            <!-- Column 2-->
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/advertisement_3"
                android:src="@drawable/mcdonals"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:clickable="true"/>

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/advertisement_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/pepsi"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/advertisement_5"
                android:src="@drawable/cpp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:clickable="true"/>

        </LinearLayout>

        <!-- Column 2-->
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageButton
                android:id="@+id/advertisement_6"
                android:src="@drawable/cocacola"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:clickable="true"/>

        </LinearLayout>


        <!--
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >



        </androidx.cardview.widget.CardView>
        -->
    </GridLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="1"

        android:columnOrderPreserved="true"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.wonderkiln.camerakit.CameraView
                    android:id="@+id/camera_view"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true">
                </com.wonderkiln.camerakit.CameraView>



                <com.example.myapplication.Helper.GraphicOverlay
                    android:id="@+id/graphics_overlay"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true">

                </com.example.myapplication.Helper.GraphicOverlay>


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textGrid3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"

                android:text="Camera Test"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Emotional Response:"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textView_emotionalResp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

            <Button
                android:id="@+id/btn_detect"
                android:text="Test Camera"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
    </GridLayout>






